<odoo>
    <data>

        <!-- Search View -->
        <record id="siswa_tab_ocb11.view_tabungan_filter" model="ir.ui.view">
            <field name="name">tabungan.list.select</field>
            <field name="model">siswa_tab_ocb11.tabungan</field>
            <field name="sequence">16</field>
            <field name="arch" type="xml">
                <search string="Search Tabungan">
                    <group expand="0" string="Group By">
                        <filter name="group_by_siswa" string="Siswa" domain="[]" context="{'group_by':'siswa_id'}"/>
                        <!-- <filter name="group_by_rombel" string="Rombongan Belajar" domain="[]" context="{'group_by':'active_rombel_id'}"/> -->
                    </group>
                </search>
            </field>
        </record>

        <!-- explicit list view definition -->    
        <record model="ir.ui.view" id="siswa_tab_ocb11.tabungan_list">
            <field name="name">siswa_tab_ocb11_tabungan_list</field>
            <field name="model">siswa_tab_ocb11.tabungan</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <tree  >
                    <field name="name"/>
                    <field name="tanggal" />
                    <field name="siswa_id" />
                    <field name="jenis" />
                    <field name="jumlah" sum="Saldo"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="siswa_tab_ocb11.siswa_tabungan_list">
            <field name="name">siswa_tab_ocb11_siswa_tabungan_list</field>
            <field name="model">siswa_tab_ocb11.tabungan</field>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false" >
                    <field name="name"/>
                    <field name="tanggal" />
                    <field name="siswa_id" invisible="1" />
                    <field name="jenis" />
                    <field name="jumlah" sum="Saldo"/>
                </tree>
            </field>
        </record>
        
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="siswa_tab_ocb11.tabungan_action_window">
            <field name="name">Tabungan Siswa</field>
            <field name="res_model">siswa_tab_ocb11.tabungan</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="siswa_tab_ocb11.tabungan_persiswa_action_window" model="ir.actions.act_window">
            <field name="name">Tabungan Siswa</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">siswa_tab_ocb11.tabungan</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('siswa_id','=',active_id)]</field>
            <field name="context">{}</field>
            <field name="view_id" ref="siswa_tab_ocb11.siswa_tabungan_list"/>
            <field name="form_view_id" ref="siswa_tab_ocb11.view_tabungan_form"/>
        </record>

        <record id="view_tabungan_form" model="ir.ui.view">
            <field name="name">tabungan.ocb11.form</field>
            <field name="model">siswa_tab_ocb11.tabungan</field>
            <field name="arch" type="xml">
                <form string="tabungan" class="o_sale_order">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn btn-primary" attrs="{'invisible':['|',('state', '=', 'post'),('name', '=', 'New')]}" />
                        <button confirm="Are you sure you want to do this?" name="action_cancel" string="Cancel" type="object" class="btn btn-primary" attrs="{'invisible':['|',('state', '=', 'draft'),('name', '=', 'New')]}" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,post"  />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tanggal" attrs="{'readonly':[('name', '!=', 'New')]}" />
                                <field name="siswa_id" domain="[('is_siswa','=',True)]" options="{'no_create_edit': True,'no_open':True}" attrs="{'readonly':[('name', '!=', 'New')]}" />
                                <field name="induk" />                        
                                <field name="active_rombel_id" />
                            </group>
                            <group>
                                <field name="jenis" attrs="{'readonly':[('name', '!=', 'New')]}" />                        
                                <field name="jumlah" attrs="{'readonly':[('state', '=', 'post')]}" />                        
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Menu -->
        <!-- Top menu item -->
        <menuitem name="Tabungan" id="siswa_tab_ocb11.tabungan_master_menu"/>
        
        <!-- menu categories -->    
        <menuitem name="Tabungan" id="siswa_tab_ocb11.tabungan_menu" parent="siswa_tab_ocb11.tabungan_master_menu" sequence="1" />
        <menuitem name="Operations" id="siswa_tab_ocb11.submenu_tabungan_operations" parent="siswa_tab_ocb11.tabungan_master_menu" sequence="3" />
        
        <!-- actions master -->    
        <!-- <menuitem name="Siswa" id="siswa_tab_ocb11.menu_siswa" parent="siswa_tab_ocb11.tabungan_menu" action="siswa_tab_ocb11.biaya_action_window" sequence="1"/> -->
        
        <!-- actions operations -->            
        <menuitem name="Setoran/Tarik Tunai" id="siswa_tab_ocb11.action_tabungan_menu" parent="siswa_tab_ocb11.submenu_tabungan_operations" action="siswa_tab_ocb11.tabungan_action_window" sequence="1"/>
        
        <!-- actions reports -->            
        <!-- <menuitem name="tabungan" id="siswa_tab_ocb11.menu_report_kas" parent="siswa_tab_ocb11.submenu_tabungan_reports" action="siswa_tab_ocb11.wizard_report_kas" sequence="1"/> -->
        

    </data>
</odoo>